<header class="header masthead text-center text-white">
  <div class="masthead-content">
    <div class="container">
      <h1 class="masthead-heading mb-0 header-animation">Share your files</h1>
      <h2 class="masthead-subheading mb-0 header-animation">with the whole world</h2>
      <%if user_signed_in?%>
        <%#=  button_to "Open Drive", edisk_directory_path(EdiskDirectory.find(0)), method: :get, class: "btn btn-primary btn-xl rounded-pill mt-5" %>
        <%=  button_to "Open Drive", edisk_directory_path(EdiskDirectory.where(user_id: current_user.id).find_by(name: "home", ancestry: nil)), method: :get, class: "btn btn-primary btn-xl rounded-pill mt-5" %>
    <%else %>
        <%= link_to "Create Account", new_user_registration_path, class: "btn btn-primary btn-xl rounded-pill mt-5" %>
      <%end %>
    </div>
  </div>
  <div class="bg-circle-1 bg-circle"></div>
  <div class="bg-circle-2 bg-circle"></div>
  <div class="bg-circle-3 bg-circle"></div>
  <div class="bg-circle-4 bg-circle"></div>
</header>

<footer class="footer, py-3 bg-light fixed-bottom">
    <p class="text-center", style="margin: 0">Made with ❤ by 🧑‍🚀 Mateusz Białowąs |🦸‍♂️ Maciej Bociuk | 👨‍💻 Mateusz Sekściński</p>
