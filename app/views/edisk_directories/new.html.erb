<h5>Create new directory </h5>
<%= form_with model: @edisk_directory, url: new_edisk_directory_path(format: @query) do |f| %>

    <% if @edisk_directory.errors.any? %>
    <div class = "alert alert-danger">
      <%@edisk_directory.errors.full_messages.each do |message| %>
        <div> <%=message %> </div>
      <%end%>
    </div>
  <%end%>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control mb-2" %>
    </div>
  <div>
  <%= hidden_field_tag :parent_id, "#{params[:format]}" %>
    <%= hidden_field_tag :@query, "#{@query}" %>
  </div>
  <%= f.submit "Confirm" %>

<% end %>