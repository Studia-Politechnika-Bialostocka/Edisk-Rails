<div class="container mt-5">
  <h2 class="text-center">Forgot your password?</h2>
  <section class="col-8 offset-2 col-sm-6 offset-sm-3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name, format: :html), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-primary mt-3' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </section>
</div>