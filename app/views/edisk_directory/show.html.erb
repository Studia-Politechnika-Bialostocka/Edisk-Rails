<div class="container">
  <% return_all_files_from_directory(@temp).each_slice(3) do |directory| %>
    <div class="row">
      <% directory.each  do |post| %>
        <% if post.avatar.representable?%>
          <% end %>
        <div class="col-sm-6 col-lg-4">
          <div class="card" style="width: 15rem;">
            <% if post.avatar.representable? %>
              <picture>
                <%= image_tag url_for(post.avatar), class:"card-img-top", style:"max-height: 300px; max-width: 300px;"%>
              </picture>
            <% else %>
              <%= link_to rails_blob_path(post.avatar, disposition: "attachment") do %>
                <%= image_tag "https://cdn.discordapp.com/attachments/693201051846836335/836270545641275492/vzLY25G.jpg", alt: "Download file", class: "card-img-top", style:"max-height: 300px; max-width: 300px;" %>
              <%end %>
            <%end %>

            <div class="card-body">

              <h5 class="card-title"><%=link_to post.name, url_for(post.avatar)%></h5>
              <div>

                <%= button_to "Edit", edit_edisk_file_path(post), method: :get, class: "btn btn-primary btn-sm"%>
                <%= button_to "Destroy", edisk_file_path(post), method: :delete, data: {confirm: "Are you sure?"},class: "btn btn-danger btn-sm"%>
              </div>
            </div>
          </div>
        </div>
      <%end %>
    </div>
  <% end %>
</div>
