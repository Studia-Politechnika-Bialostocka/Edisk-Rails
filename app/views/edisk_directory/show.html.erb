<% temp = EdiskDirectory.find(params[:id]) %>
<%if temp.id === 0%>
  <%= link_to temp.name, edisk_directory_path(temp), method: :get %>
<% else%>
  <%parent_temp = EdiskDirectory.find(temp.parent_id) %>
  <%= link_to parent_temp.name, edisk_directory_path(parent_temp), method: :get %>
  <%= " / " %>
  <%= link_to temp.name, edisk_directory_path(temp), method: :get %>

<%end %>

<ul>
  <p>Add new directory<%=button_to "+", "/edisk_directory/" + params[:id] + "/new"%></p>

  <% @edisk_directories.each do |directory| %>
    <li>
      <%= link_to directory.name, "/edisk_directory/" + directory.id.to_s %>
      <%= button_to "Edit", "/edisk_directory/" + directory.id.to_s + "/edit",  class: "btn btn-success"%>
      <%= button_to "Destroy", edisk_directory_path(directory), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-primary' %>

    </li>

  <% end %>
</ul>